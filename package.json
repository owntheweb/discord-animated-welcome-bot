{
  "name": "discord-animated-welcome-bot",
  "version": "0.1.0",
  "description": "Welcome new guild members with an animated gif banner and message.",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc",
    "dev": "ts-node-dev --respawn --transpileOnly ./src/index.ts",
